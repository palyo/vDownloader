<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_preview"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:cardBackgroundColor="@color/colorLightCard"
            app:cardCornerRadius="@dimen/_12sdp"
            app:strokeWidth="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/preview_tab"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:contentPadding="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_icon_web"
                app:tint="@color/colorIconOpacity" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_tab"
            style="@style/Theme.VidDownloader.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_toStartOf="@id/close_tab"
            android:layout_toEndOf="@id/card_preview"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="Tab Path"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/medium" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/close_tab"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            app:contentPadding="@dimen/_2sdp"
            app:srcCompat="@drawable/ic_icon_close" />

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:background="@color/colorLightCard" />
</com.google.android.material.circularreveal.CircularRevealLinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VidDownloader" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorForeground" tools:targetApi="o_mr1">@color/colorBackground</item>

        <item name="android:textColorSecondary">@color/colorIcon</item>
        <item name="android:popupMenuStyle">@style/Theme.VidDownloader.PopupMenu</item>
        <item name="popupMenuBackground">@color/colorBackground</item>
    </style>

    <style name="Theme.VidDownloader.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.VidDownloader.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.VidDownloader.ToolbarSmallTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Theme.VidDownloader.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:itemBackground">@color/colorTransparent</item>
        <item name="popupMenuBackground">@drawable/ic_background_rounded_popup</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">@dimen/_8sdp</item>
        <item name="android:dropDownHorizontalOffset">@dimen/_8sdp</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_32sdp</item>
    </style>

    <style name="Theme.VidDownloader.FullScreenDialogStyle" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor" tools:targetApi="o_mr1">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground
        </item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.VidDownloader.DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.VidDownloader.Title">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Theme.VidDownloader.Medium">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Theme.VidDownloader.Small">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorSubText</item>
    </style>

    <style name="Theme.VidDownloader.MaterialButton">
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="iconTint">@color/colorAccentButtonText</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_4sdp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccentButtonText</item>
    </style>

    <style name="Theme.VidDownloader.BottomSheet" parent="@style/Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.VidDownloader.BaseBottomSheetDialog" parent="@style/Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.VidDownloader.BottomSheet</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.VidDownloader.BottomSheetDialogTheme" parent="Theme.VidDownloader.BaseBottomSheetDialog" />

    <style name="Theme.VidDownloader" parent="Base.Theme.VidDownloader" />

    <style name="TextBold">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextRegular">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>